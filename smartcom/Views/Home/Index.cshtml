@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td>
                    <p>Название книги</p>
                </td>
                <td>
                    <p>Автор</p>
                </td>
                <td>
                    <p>Цена</p>
                </td>
            </tr>
            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td>
                        <p>@b.Name</p>
                    </td>
                    <td>
                        <p>@b.Author</p>
                    </td>
                    <td>
                        <p>@b.Price</p>
                    </td>
                    <td>
                        <p><a href="/Home/Buy/@b.Id">Купить</a></p>
                    </td>
                </tr>
            }
        </table>
    </div>
